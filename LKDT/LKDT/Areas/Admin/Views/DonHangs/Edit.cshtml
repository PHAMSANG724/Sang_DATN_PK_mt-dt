@model LKDT.Models.DonHang

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a asp-area="Admin" asp-controller="DonHangs" asp-action="Index" class="breadcrumb-item">Danh sách đơn hàng</a>
            <span class="breadcrumb-item active">Chỉnh sửa đơn hàng số: #@Model.MaDh</span>
        </nav>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaDh" />
            <input type="hidden" asp-for="MaKh" />
            <input type="hidden" asp-for="NgayMua" />
            <input type="hidden" asp-for="ThanhToan" />
            <input type="hidden" asp-for="NgayThanhToan" />
            <input type="hidden" asp-for="GhiChu" />
            <input type="hidden" asp-for="DiaChi" />
            <input type="hidden" asp-for="TongTien" />
            <input type="hidden" asp-for="DiachiGiaoHang" />
            
            <div class="form-group">
                <label asp-for="NgayGiao" class="control-label">Chọn ngày giao hàng</label>
                <input asp-for="NgayGiao" class="form-control" />
                <span asp-validation-for="NgayGiao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaTrangThai" class="control-label">Chọn trạng thái đơn hàng</label>
                <select asp-for="MaTrangThai" class="form-control" asp-items="ViewBag.MaTrangThai"></select>
                <span asp-validation-for="MaTrangThai" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="MaShipper" class="control-label"> Chọn nhân viên giao hàng</label>
                <select asp-for="MaShipper" class="form-control" asp-items="ViewBag.MaShipper"></select>
                <span asp-validation-for="MaShipper" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

