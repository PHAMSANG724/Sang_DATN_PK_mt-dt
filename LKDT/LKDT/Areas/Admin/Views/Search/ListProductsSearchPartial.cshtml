@model List<SanPham>
@if (Model != null)
{
    foreach (var item in Model)
    {
<tr>

    <td>
        @item.MaSp
    </td>
    <td>
        <div class="d-flex align-items-center">
            <img class="img-fluid rounded" src="assets/images/others/thumb-9.jpg" style="max-width: 60px" alt="">
            <h6 class="m-b-0 m-l-10">@item.TenSp</h6>
        </div>
    </td>
    <td>@item.MaDmNavigation.TenDm</td>
    <td>@item.DonGia.Value.ToString("#,##0") VNĐ</td>
    <td>
        @if (item.TrangThai == true)
        {
            <div class="d-flex align-items-center">
                <div class="badge badge-success badge-dot m-r-10"></div>
                <div>Còn hàng</div>
            </div> }
        else
        {
            <div class="d-flex align-items-center">
                <div class="badge badge-success badge-dot m-r-10"></div>
                <div>Hết hàng</div>
            </div>}
    </td>
    <td>
        <a class="btn btn-primary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminProducts" asp-action="Details" asp-route-id="@item.MaSp">Chi tiết</a>
        <a class="btn btn-secondary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminProducts" asp-action="Edit" asp-route-id="@item.MaSp">Sửa</a>
        <a class="btn btn-success btn-tone m-r-5" asp-area="Admin" asp-controller="AdminProducts" asp-action="Delete" asp-route-id="@item.MaSp">Xóa</a>

    </td>
</tr>
    }
}