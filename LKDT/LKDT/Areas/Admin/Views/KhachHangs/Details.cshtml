@model LKDT.Models.KhachHang

@{ ViewData["Title"] = "Thông tin khách hàng: " + Model.HoTen;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml"; }

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a asp-area="Admin" asp-controller="KhachHangs" asp-action="Index" class="breadcrumb-item">Danh sách khách hàng</a>
            <span class="breadcrumb-item active">Thông tin khách hàng : @Model.HoTen</span>
        </nav>
    </div>
</div>

<div class="card-body">
    <h4 class="card-title">Thông tin khách hàng : @Model.HoTen</h4>
    <div class="table-responsive">
        <table class="product-info-table m-t-20">
            <tbody>
                <tr>
                    <td>ID khách hàng:</td>
                    <td class="text-dark font-weight-semibold">@Model.MaKh</td>
                </tr>
                <tr>
                    <td>Họ tên:</td>
                    <td>@Model.HoTen</td>
                </tr>
                <tr>
                    <td>Email:</td>
                    <td>@Model.Email</td>
                </tr>
                <tr>
                    <td>Số điện thoại:</td>
                    <td>@Model.Sdt</td>
                </tr>
                <tr>
                    <td>Địa chỉ:</td>
                    <td>@Model.DiaChi</td>
                </tr>
                <tr>
                    <td>Ngày tạo:</td>
                    <td>@Model.NgayTao</td>
                </tr>
                <tr>
                    <td>Hoạt động:</td>
                    <td>
                        @if (Model.TrangThai)
                        {
                            <div class="switch m-r-10">
                                <input type="checkbox" id="switch-1" checked="" disabled />
                                <label for="switch-1"></label>
                            </div>
                        }
                        else
                        {
                            <div class="switch m-r-10">
                                <input type="checkbox" id="switch-1" disabled />
                                <label for="switch-1"></label>
                            </div>
                        }
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
