@model LKDT.Models.KhachHang

@{ ViewData["Title"] = "Thay đổi trạng thái";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml"; }

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a asp-area="Admin" asp-controller="KhachHangs" asp-action="Index" class="breadcrumb-item">Danh sách khách hàng</a>
            <span class="breadcrumb-item active">Thay đổi trạng thái tài khoản của khách hàng</span>
        </nav>
    </div>
</div>
<div class="modal-body">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">THÔNG TIN KHÁCH HÀNG</h4>
            <div class="table-responsive">
                <table class="product-info-table m-t-20">
                    <tbody>
                        <tr>
                            <td>ID khách hàng:</td>
                            <td class="text-dark font-weight-semibold">@Model.MaKh</td>
                        </tr>
                        <tr>
                            <td>Họ tên:</td>
                            <td>@Model.HoTen</td>
                        </tr>
                        <tr>
                            <td>Email:</td>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <td>Số điện thoại:</td>
                            <td>@Model.Sdt</td>
                        </tr>
                        <tr>
                            <td>Địa chỉ:</td>
                            <td>@Model.DiaChi</td>
                        </tr>
                        <tr>
                            <td>Ngày tạo:</td>
                            <td>@Model.NgayTao</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <form asp-action="Edit2">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MaKh" />
                <input type="hidden" asp-for="Avatar" />
                <input type="hidden" asp-for="Password" />
                <input type="hidden" asp-for="DangNhapCuoi" />
                <input type="hidden" asp-for="HoTen" />
                <input type="hidden" asp-for="DiaChi" />
                <input type="hidden" asp-for="Sdt" />
                <input type="hidden" asp-for="NgayTao" />
                <input type="hidden" asp-for="Email" />
                <input type="hidden" asp-for="ChuoiMaHoa" />
                <input type="hidden" asp-for="MaDcgh" />
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="m-t-25">
                                <div class="form-group d-flex align-items-center">
                                    <div class="switch m-r-10">
                                        <input type="checkbox" asp-for="TrangThai" checked="">
                                        <label for="TrangThai"></label>
                                    </div>
                                    <label>Hoạt động</label>
                                </div>

                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>


                
            </div>

    </div>
